.indexWrap{
    background-image: linear-gradient(to right,#00939c, #00919a);
    padding: 50rpx 100rpx 0 100rpx;
    display: flex;
    height: 200rpx;
}
.indexWrap .avator{
    overflow: hidden;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 8rpx solid #89d0d6;
}
.indexWrap .textWrap{
    flex: 1;
    padding-left: 40rpx;

}
.indexWrap .textWrap .name{
    color: #fefefe;
    font-style: 32rpx;
    line-height: 50rpx;
}
.indexWrap .textWrap .desc{
    color: #31b6bd;
    border-radius: 6rpx;
    border: 2rpx solid #31b6bd;
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 20rpx;
    font-size: 24rpx;
    padding: 0 20rpx;
    display: inline-block;
}
.dataWrap{
    margin: 80rpx 50rpx;
    box-shadow: 0 0 50rpx #ddd; 
    border-radius: 8rpx;
    display: flex;
    padding: 50rpx 0;
}
.dataWrap .dataItem{
    flex: 1;
    text-align: center;
}
.dataWrap .dataItem .value{
    font-weight: bold;
    color: #323333;
    font-size: 48rpx;
    line-height: 80rpx;
}
.dataWrap .dataItem .keyName{
    color: #9b9c9d;
    font-size: 32rpx;
    line-height: 56rpx;
}
.addWrap{
    margin: 0 50rpx;
    box-shadow: 0 0 50rpx #ddd; 
    border-radius: 8rpx;
    padding: 30rpx;
}
.addWrap .addBox{
    border: 1px dashed #35adb3;
    border-radius: 8rpx;
    text-align: center;
}
.addWrap .addBox .addIcon{
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    color: #fafafa;
    background-color: #00919a;
    line-height: 88rpx;
    font-size: 60rpx;
    font-weight: bold;
    margin: 40rpx auto;
    vertical-align: middle;
}
.addWrap .addBox .addDesc{
    color: #333434;
    font-size: 40rpx;
    line-height: 60rpx;
    margin-bottom: 30rpx;
    font-weight: bold;
}